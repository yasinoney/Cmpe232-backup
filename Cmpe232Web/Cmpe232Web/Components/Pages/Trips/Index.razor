@page "/trips"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using DataAccess
@inject IDbContextFactory<Cmpe232Web.Data.Cmpe232WebContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Sefer Yönetimi</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Aktif Seferler</h3>
        <a href="/trips/create" class="btn btn-success">Yeni Sefer Ekle</a>
    </div>

    <table class="table table-hover shadow-sm border">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Güzergah (Route)</th>
                <th>Kalkış Zamanı</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (trips != null)
            {
                @foreach (var t in trips)
                {
                    <tr>
                        <td>@t.TripID</td>
                        <td>
                            @* ER Diyagramındaki ilişkiden gelen şehir bilgileri *@
                            <span class="badge bg-secondary">@t.Route?.OriginCity ➔ @t.Route?.DestinationCity</span>
                        </td>
                        <td>@t.ScheduledDeparture.ToString("g")</td>
                        <td class="text-primary fw-bold">@t.BaseFare TL</td>
                        <td>
                            <div class="btn-group">
                                <a href="/trips/edit/@t.TripID" class="btn btn-sm btn-outline-warning">Düzenle</a>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTrip(t.TripID)">Sil</button>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@code {
    private List<Trip>? trips;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        using var context = DbFactory.CreateDbContext();
        // ER Diyagramındaki ilişkiyi korumak için Route'u da çekiyoruz
        trips = await context.Set<Trip>().Include(t => t.Route).ToListAsync();
    }

    private async Task DeleteTrip(int id)
    {
        using var context = DbFactory.CreateDbContext();
        var trip = await context.Set<Trip>().FindAsync(id);
        if (trip != null)
        {
            context.Set<Trip>().Remove(trip);
            await context.SaveChangesAsync();
            await LoadData(); // Listeyi güncelle
        }
    }
}