@page "/supervisors/assign"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using DataAccess
@using Microsoft.AspNetCore.Components.Forms
@inject IDbContextFactory<Cmpe232Web.Data.Cmpe232WebContext> DbFactory
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h3>Personeli Yönetici Olarak Ata</h3>
        </div>
        <div class="card-body">
            @if (employees == null)
            {
                <div class="alert alert-info">Personel listesi yükleniyor...</div>
            }
            else
            {
                <EditForm Model="supDto" OnValidSubmit="HandleAssignment">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="form-label fw-bold">1. Yönetici Olacak Personeli Seçin:</label>
                        <InputSelect @bind-Value="supDto.EmployeeID" class="form-select border-primary">
                            <option value="0">-- Personel Listesi --</option>
                            @foreach (var emp in employees)
                            {
                                <option value="@emp.EmployeeID">@emp.Name (ID: @emp.EmployeeID)</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => supDto.EmployeeID)" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">2. Kullanıcı Adı:</label>
                            <InputText @bind-Value="supDto.Username" class="form-control" placeholder="admin_ahmet" />
                            <ValidationMessage For="@(() => supDto.Username)" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">3. Giriş Şifresi:</label>
                            <InputText @bind-Value="supDto.Password" type="password" class="form-control" />
                            <ValidationMessage For="@(() => supDto.Password)" />
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary px-5">Yetkiyi Tanımla</button>
                        <a href="/employees" class="btn btn-outline-secondary">Vazgeç</a>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    private SupervisorDTO supDto = new();
    private List<Employee>? employees;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        // Sadece henüz yönetici (Supervisor) olmayan personelleri getirelim (isteğe bağlı)
        employees = await context.Set<Employee>()
            .Include(e => e.Supervisor)
            .Where(e => e.Supervisor == null)
            .ToListAsync();
    }

    private async Task HandleAssignment()
    {
        if (supDto.EmployeeID == 0) return;

        using var context = DbFactory.CreateDbContext();

        var newSupervisor = new Supervisor
        {
            EmployeeID = supDto.EmployeeID,
            Username = supDto.Username,
            Password = supDto.Password
        };

        context.Set<Supervisor>().Add(newSupervisor);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/employees");
    }
}